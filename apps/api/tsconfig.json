{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2017", "ES2021.String", "esnext.asynciterable"],
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": false,
    "declaration": true,
    "typeRoots": ["node_modules/@types"]
  },
  // "include": ["src/**/*"],
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
